{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "sourceMap": true,
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts", "src/**/*.mjs"],
  "exclude": ["node_modules"]
}
